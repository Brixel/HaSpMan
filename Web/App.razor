@using Web.Pages.Account
@using Web.Pages.Public
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context?.User?.Identity != null && !context.User.Identity.IsAuthenticated)
                    {
                        <LoginButton />
                    }
                    else
                    {
                        <AccessDenied />
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="d-grid place-items-center expand">
                    <img class=" expand mw-7" src="images/404.jpg"
                         alt="Sorry, there's nothing at this address." />
                    <MudText Typo="Typo.body2">
                        <a href="https://www.freepik.com/vectors/disconnect">Disconnect vector created by jcomp - www.freepik.com</a>
                    </MudText>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>